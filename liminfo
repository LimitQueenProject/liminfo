#!/bin/bash
#gausah di recode ya
#kode warna
a='\033[1;31m'
b='\033[1;32m'
c='\033[1;33m'
d='\033[1;34m'
e='\033[1;35m'
f='\033[1;36m'
o='\033[0m'
clear
banner(){
echo -e """\033[1;32m
